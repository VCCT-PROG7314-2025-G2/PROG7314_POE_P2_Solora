<resources>
    <style name="Theme.Solora" parent="Theme.Material3.Light">
        <item name="android:statusBarColor">@color/solora_orange_dark</item>
        <item name="colorPrimary">@color/solora_orange</item>
        <item name="colorOnPrimary">@color/solora_on_primary</item>
        <item name="colorPrimaryContainer">@color/solora_orange_dark</item>
        <item name="android:navigationBarColor">@color/solora_orange</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.Solora.DatePicker</item>
    </style>
    
    <!-- Date Picker Theme with Solora Orange -->
    <style name="ThemeOverlay.Solora.DatePicker" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/solora_orange</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="colorSecondary">@color/solora_orange</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="materialCalendarHeaderSelection">@color/solora_orange</item>
        <item name="materialCalendarHeaderTitle">@color/solora_orange</item>
        <item name="materialCalendarDay">@color/solora_orange</item>
        <item name="materialCalendarYearSelected">@color/solora_orange</item>
        <item name="materialCalendarMonthSelected">@color/solora_orange</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Solora.Button.TextButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Solora.Button.TextButton</item>
    </style>
    
    <!-- Orange text buttons for date picker -->
    <style name="Widget.Solora.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/solora_orange</item>
        <item name="rippleColor">@color/solora_orange</item>
    </style>
</resources>



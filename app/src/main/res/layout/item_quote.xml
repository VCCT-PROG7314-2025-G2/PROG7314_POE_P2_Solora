<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="false"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with reference and date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_quote_reference"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Q-2024-001"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/solora_orange" />

            <TextView
                android:id="@+id/tv_quote_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01 Jan 2024"
                android:textSize="12sp"
                android:textColor="#999999" />
        </LinearLayout>

        <!-- Client name -->
        <TextView
            android:id="@+id/tv_client_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="John Smith"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <!-- Address -->
        <TextView
            android:id="@+id/tv_client_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123 Main Street, Cape Town"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_marginBottom="12dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Quote details row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- System size -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system"
                    android:textSize="10sp"
                    android:textColor="#999999" />

                <TextView
                    android:id="@+id/tv_system_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.3 kW"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Savings -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/monthly_savings"
                    android:textSize="10sp"
                    android:textColor="#999999" />

                <TextView
                    android:id="@+id/tv_savings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R 1,600"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/solora_orange" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>


<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="600dp"
    android:fillViewport="true"
    android:background="@android:color/transparent">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="28dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="28dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/change_password"
            android:textColor="@color/solora_orange_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_close_change_password"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="@color/solora_orange"
            android:contentDescription="Close" />

    </LinearLayout>

    <!-- Form Fields -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxStrokeColor="@color/solora_orange_light"
        app:boxStrokeWidth="1dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:hintTextColor="@color/solora_orange_light"
        app:startIconTint="@color/solora_orange_light"
        app:endIconTint="@color/solora_orange_light"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/solora_orange_light"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_current_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/current_password"
            android:textColor="@color/solora_on_surface"
            android:textColorHint="@color/solora_orange_light"
            android:textSize="14sp"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxStrokeColor="@color/solora_orange_light"
        app:boxStrokeWidth="1dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:hintTextColor="@color/solora_orange_light"
        app:startIconTint="@color/solora_orange_light"
        app:endIconTint="@color/solora_orange_light"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/solora_orange_light"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_password"
            android:textColor="@color/solora_on_surface"
            android:textColorHint="@color/solora_orange_light"
            android:textSize="14sp"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxStrokeColor="@color/solora_orange_light"
        app:boxStrokeWidth="1dp"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:hintTextColor="@color/solora_orange_light"
        app:startIconTint="@color/solora_orange_light"
        app:endIconTint="@color/solora_orange_light"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/solora_orange_light"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/confirm_new_password"
            android:textColor="@color/solora_on_surface"
            android:textColorHint="@color/solora_orange_light"
            android:textSize="14sp"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Password Requirements -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/password_requirement"
        android:textColor="@color/solora_orange_light"
        android:textSize="12sp"
        android:layout_marginBottom="28dp"
        android:alpha="0.8" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/btn_cancel_change_password"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/cancel"
            android:textColor="@color/solora_orange_light"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginEnd="16dp"
            android:minWidth="100dp"
            android:textSize="14sp"
            app:cornerRadius="24dp"
            android:background="@drawable/button_outline_orange" />

        <Button
            android:id="@+id/btn_save_change_password"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/confirm"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/solora_orange"
            android:minWidth="100dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="24dp" />

    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

</ScrollView>

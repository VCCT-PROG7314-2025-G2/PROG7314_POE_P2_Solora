<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="700dp"
    android:fillViewport="true"
    android:background="@android:color/transparent"
    android:scrollbars="vertical"
    android:fadeScrollbars="false"
    android:scrollbarStyle="outsideOverlay"
    android:scrollbarThumbVertical="@color/solora_orange"
    android:scrollbarTrackVertical="@android:color/transparent">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/solora_orange">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/solora_orange"
        android:padding="20dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/edit_profile"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_close_edit_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="@android:color/white"
            android:contentDescription="Close" />

    </LinearLayout>

    <!-- Form Fields -->
    <!-- First Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_name"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="6dp" />
    
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxStrokeColor="@android:color/white"
        app:boxStrokeWidth="0dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange"
        app:endIconTint="@color/solora_orange"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dialog_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_first_name"
            android:textColor="@color/solora_on_surface"
            android:textColorHint="@color/solora_orange"
            android:textSize="14sp"
            android:inputType="textPersonName" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Last Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/last_name"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="6dp" />
    
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxStrokeColor="@android:color/white"
        app:boxStrokeWidth="0dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange"
        app:endIconTint="@color/solora_orange"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dialog_surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_last_name"
            android:textColor="@color/solora_on_surface"
            android:textColorHint="@color/solora_orange"
            android:textSize="14sp"
            android:inputType="textPersonName" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Email -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="6dp" />
    
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxStrokeColor="@android:color/white"
        app:boxStrokeWidth="0dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange"
        app:endIconTint="@color/solora_orange"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dialog_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_email_address"
            android:textColor="@color/solora_on_surface"
            android:textColorHint="@color/solora_orange"
            android:textSize="14sp"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Phone -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_number_label"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="6dp" />
    
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxStrokeColor="@android:color/white"
        app:boxStrokeWidth="0dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange"
        app:endIconTint="@color/solora_orange"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dialog_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_phone_number"
            android:textColor="@color/solora_on_surface"
            android:textColorHint="@color/solora_orange"
            android:textSize="14sp"
            android:inputType="phone" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Company -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tab_company"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="6dp" />
    
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxStrokeColor="@android:color/white"
        app:boxStrokeWidth="0dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange"
        app:endIconTint="@color/solora_orange"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dialog_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_company_name"
            android:textColor="@color/solora_on_surface"
            android:textColorHint="@color/solora_orange"
            android:textSize="14sp"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Company Information Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/company_information"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp" />

    <!-- Company Name -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/company_name"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="6dp" />
    
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxStrokeColor="@android:color/white"
        app:boxStrokeWidth="0dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange"
        app:endIconTint="@color/solora_orange"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dialog_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_company_name"
            android:textColor="@color/solora_on_surface"
            android:textColorHint="@color/solora_orange"
            android:textSize="14sp"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Company Address -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/company_address"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="6dp" />
    
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxStrokeColor="@android:color/white"
        app:boxStrokeWidth="0dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange"
        app:endIconTint="@color/solora_orange"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dialog_company_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_company_address"
            android:textColor="@color/solora_on_surface"
            android:textColorHint="@color/solora_orange"
            android:textSize="14sp"
            android:inputType="textPostalAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Company Phone -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/company_phone"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="6dp" />
    
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxStrokeColor="@android:color/white"
        app:boxStrokeWidth="0dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange"
        app:endIconTint="@color/solora_orange"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dialog_company_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_company_phone"
            android:textColor="@color/solora_on_surface"
            android:textColorHint="@color/solora_orange"
            android:textSize="14sp"
            android:inputType="phone" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Company Email -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/company_email"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="6dp" />
    
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxStrokeColor="@android:color/white"
        app:boxStrokeWidth="0dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange"
        app:endIconTint="@color/solora_orange"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dialog_company_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_company_email"
            android:textColor="@color/solora_on_surface"
            android:textColorHint="@color/solora_orange"
            android:textSize="14sp"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Company Website -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/company_website"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="6dp" />
    
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundColor="@android:color/white"
        app:boxStrokeColor="@android:color/white"
        app:boxStrokeWidth="0dp"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:hintTextColor="@color/solora_orange"
        app:startIconTint="@color/solora_orange"
        app:endIconTint="@color/solora_orange"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_dialog_company_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_company_website"
            android:textColor="@color/solora_on_surface"
            android:textColorHint="@color/solora_orange"
            android:textSize="14sp"
            android:inputType="textUri" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/btn_cancel_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="@string/cancel"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/transparent"
            android:layout_marginEnd="12dp"
            android:minWidth="90dp"
            android:textSize="14sp"
            app:cornerRadius="22dp"
            android:background="@drawable/button_outline_white" />

        <Button
            android:id="@+id/btn_save_edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="@string/save"
            android:textColor="@color/solora_orange"
            android:backgroundTint="@android:color/white"
            android:minWidth="90dp"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="22dp" />

    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

</ScrollView>
